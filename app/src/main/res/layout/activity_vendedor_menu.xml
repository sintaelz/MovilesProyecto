<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.itesm.csf.crud.vendedorMenu">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="500dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/comision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Comision"
            android:textSize="26sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp" />

        <Button
            android:id="@+id/historial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Historial"
            android:textSize="26sp"
            android:fontFamily="sans-serif"
            android:layout_alignBaseline="@+id/comision"
            android:layout_alignBottom="@+id/comision"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp" />

        <ImageButton
            android:id="@+id/carrito"
            android:layout_width="107dp"
            android:layout_height="112dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/carrito"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="52dp"
            android:layout_alignTop="@+id/catalogo"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp" />

        <ImageButton
            android:id="@+id/catalogo"
            android:layout_width="107dp"
            android:layout_height="112dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/catalogo"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="52dp"
            android:layout_marginTop="157dp"
            android:layout_marginStart="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/clientes"
            android:layout_width="107dp"
            android:layout_height="112dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/clientes"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="52dp"
            android:layout_alignTop="@+id/pedidos"
            android:layout_alignStart="@+id/catalogo" />

        <ImageButton
            android:id="@+id/pedidos"
            android:layout_width="107dp"
            android:layout_height="112dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/pedidos"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="52dp"
            android:layout_marginTop="55dp"
            android:layout_below="@+id/carrito"
            android:layout_alignStart="@+id/carrito" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/VENDEDOR"
            android:textSize="32sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="21dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="26sp"
            android:fontFamily="sans-serif"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
